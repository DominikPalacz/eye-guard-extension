{
  "manifest_version": 3,
  "name": "Focus & Eye Guard",
  "version": "1.0",
  "description": "Zadbaj o wzrok. Odliczanie czasu pracy i przerw z pełną konfiguracją.",
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sprawdź czas"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png" 
  }
}